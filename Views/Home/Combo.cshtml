@using ASM.Models
@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Combo Siêu Hời";
}

@section Styles {
    <link rel="stylesheet" href="~/Views/Home/Combo.cshtml.css" />
}

<combo-page></combo-page>

@section Templates {
    <script type="text/x-template" id="combo-page-template">
        <div class="combo-bg min-h-screen">
            <div class="bg-white shadow-sm border-b border-orange-100">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
                    <span class="inline-block py-1 px-3 rounded-full bg-red-100 text-red-600 text-xs font-bold tracking-wider mb-3 uppercase">Tiết kiệm đến 30%</span>
                    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
                        Combo <span class="text-orange-600">Siêu Hời</span>
                    </h1>
                    <p class="mt-4 text-xl text-gray-500 max-w-2xl mx-auto">
                        Ăn càng đông, giá càng rẻ. Những combo được thiết kế riêng cho nhóm bạn, gia đình và cặp đôi.
                    </p>
                    <div class="mt-8 flex justify-center space-x-2 sm:space-x-4">
                        <button v-for="type in filterTypes" 
                                :key="type.id"
                                v-on:click="selectedFilter = type.id"
                                class="filter-btn px-5 py-2 rounded-full text-sm font-bold border border-gray-200 bg-white text-gray-600 hover:border-orange-300"
                                :class="{ 'active': selectedFilter === type.id }">
                            {{ type.name }}
                        </button>
                    </div>
                </div>
            </div>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
                <div v-if="isLoading" class="flex justify-center py-20">
                    <i class="ph-duotone ph-spinner animate-spin text-5xl text-orange-500"></i>
                </div>
                <div v-else-if="filteredCombos.length === 0" class="text-center py-20">
                    <p class="text-gray-500 text-lg">Chưa có combo nào trong danh mục này.</p>
                </div>
                <div v-else class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <div v-for="combo in filteredCombos" :key="combo.id" class="combo-card bg-white rounded-2xl overflow-hidden flex flex-col relative group">
                        <div class="combo-image-wrapper relative h-64 bg-gray-100">
                            <img :src="combo.image || 'https://via.placeholder.com/400x300?text=No+Image'" :alt="combo.name" class="combo-image w-full h-full object-cover">
                            <div class="absolute top-4 left-4 flex flex-col gap-2">
                                <span v-if="combo.tag" class="bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full shadow-sm uppercase tracking-wide">
                                    {{ combo.tag }}
                                </span>
                            </div>
                            <div class="savings-badge absolute top-4 right-4 bg-red-600 text-white w-14 h-14 rounded-full flex flex-col items-center justify-center shadow-lg border-2 border-white transform rotate-12">
                                <span class="text-[10px] font-medium leading-none">Tiết kiệm</span>
                                <span class="text-sm font-bold leading-none mt-0.5">{{ calculateSavings(combo) }}%</span>
                            </div>
                            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center hidden lg:flex">
                                <button v-on:click="addToCart(combo)" class="bg-orange-600 text-white font-bold py-3 px-6 rounded-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 shadow-xl hover:bg-orange-700">
                                    Thêm vào giỏ hàng
                                </button>
                            </div>
                        </div>
                        <div class="p-6 flex-1 flex flex-col">
                            <div class="flex justify-between items-start mb-2">
                                <h3 class="text-xl font-bold text-gray-900 leading-tight">{{ combo.name }}</h3>
                                <div class="flex items-center text-gray-500 text-xs mt-1">
                                    <i class="ph-fill ph-users mr-1"></i> {{ combo.serves || 2 }} người
                                </div>
                            </div>
                            <p class="text-gray-500 text-sm mb-4">{{ combo.description }}</p>
                            <div class="bg-orange-50 rounded-lg p-3 mb-6" v-if="combo.items && combo.items.length">
                                <p class="text-xs font-bold text-orange-800 uppercase mb-2 tracking-wide">Bao gồm:</p>
                                <ul class="space-y-1">
                                    <li v-for="(item, index) in combo.items" :key="index" class="text-sm text-gray-700 flex items-center">
                                        <span class="item-dot"></span> {{ item }}
                                    </li>
                                </ul>
                            </div>
                            <div class="mt-auto pt-4 border-t border-gray-100 flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-400 line-through mb-0.5">{{ formatPrice(combo.oldPrice) }}</p>
                                    <p class="text-2xl font-extrabold text-orange-600">{{ formatPrice(combo.price) }}</p>
                                </div>
                                <button v-on:click="addToCart(combo)" class="lg:hidden w-12 h-12 bg-orange-100 text-orange-600 rounded-full flex items-center justify-center hover:bg-orange-600 hover:text-white transition-colors">
                                    <i class="ph-bold ph-shopping-cart text-xl"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>
}

@section Scripts {
    <script>
        const serverCombos = @Html.Raw(Json.Serialize(Model));

        if (window.vueApp) {
            window.vueApp.component('combo-page', {
                template: '#combo-page-template',
                setup() {
                    const { ref, computed, onMounted } = Vue;
                    const isLoading = ref(true);
                    const selectedFilter = ref('all');
                    const filterTypes = [
                        { id: 'all', name: 'Tất cả' },
                        { id: 'couple', name: 'Cặp đôi' },
                        { id: 'family', name: 'Gia đình' },
                        { id: 'party', name: 'Tiệc tùng' }
                    ];
                    
                    const combos = ref(serverCombos.map(c => ({
                        id: c.comboId,
                        name: c.name,
                        description: c.description,
                        price: c.price,
                        image: c.image,
                        oldPrice: c.oldPrice,
                        serves: c.serves,
                        type: c.type,
                        tag: c.tag,
                        items: c.items
                    })));

                    onMounted(() => {
                        setTimeout(() => { isLoading.value = false; }, 500);
                    });

                    const filteredCombos = computed(() => {
                        if (selectedFilter.value === 'all') return combos.value;
                        return combos.value.filter(c => c.type === selectedFilter.value);
                    });

                    const formatPrice = (price) => {
                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
                    };

                    const calculateSavings = (combo) => {
                        if(!combo.oldPrice) return 0;
                        return Math.round(((combo.oldPrice - combo.price) / combo.oldPrice) * 100);
                    };

                    const addToCart = (combo) => {
                        if (window.requireLogin && !window.requireLogin()) {
                            return; 
                        }
                        
                        alert(`Đã thêm combo "${combo.name}" vào giỏ hàng!`);
                    };

                    return {
                        isLoading,
                        selectedFilter,
                        filterTypes,
                        filteredCombos,
                        formatPrice,
                        calculateSavings,
                        addToCart
                    };
                }
            });
        }
    </script>
}
