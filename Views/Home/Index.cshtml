@using ASM.Models
@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Trang chủ";
}

@section Styles {
    <link rel="stylesheet" href="~/Views/Home/Index.cshtml.css" />
}

<home-page></home-page>

@section Templates {
    <script type="text/x-template" id="home-page-template">
        <div>
            <!-- HERO SECTION -->
            <div class="hero-pattern relative overflow-hidden">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 flex flex-col-reverse lg:flex-row items-center">
                    <div class="w-full lg:w-1/2 text-center lg:text-left z-10 mt-10 lg:mt-0">
                        <div class="inline-flex items-center px-3 py-1 rounded-full bg-orange-100 text-orange-600 text-sm font-bold mb-6 animate-bounce">
                            <i class="ph-fill ph-fire mr-1"></i> Hot Deal: Mua 1 Tặng 1
                        </div>
                        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-900 leading-tight">
                            Thưởng thức <br/>
                            <span class="text-orange-500">Vị Ngon Tuyệt Hảo</span>
                        </h1>
                        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto lg:mx-0">
                            Gà rán giòn rụm, Burger bò nướng lửa hồng và hàng ngàn combo hấp dẫn đang chờ bạn. Giao hàng thần tốc trong 30 phút.
                        </p>
                        <div class="mt-8 flex justify-center lg:justify-start gap-4">
                            <button v-on:click="scrollToMenu" class="px-8 py-4 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-xl shadow-lg hover:shadow-orange-500/30 transition-all transform hover:-translate-y-1">
                                Đặt Món Ngay
                            </button>
                            <a href="/Home/Combo" class="px-8 py-4 bg-white hover:bg-gray-50 text-gray-800 font-bold rounded-xl border-2 border-gray-100 shadow-sm transition-all flex items-center">
                                <i class="ph-fill ph-package mr-2 text-orange-500"></i> Xem Combo
                            </a>
                        </div>
                    </div>
                    <div class="w-full lg:w-1/2 relative">
                        <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-500 rounded-full blur-3xl opacity-20 transform scale-75"></div>
                        <img src="https://images.unsplash.com/photo-1594212699903-ec8a3eca50f5?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" alt="Mega Burger" class="relative z-10 w-full h-auto object-cover rounded-2xl shadow-2xl transform rotate-3 hover:rotate-0 transition-transform duration-500">
                    </div>
                </div>
            </div>

            <!-- MENU SECTION -->
            <div id="menu" class="bg-white py-16 min-h-screen">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-6">
                        <div class="text-center md:text-left">
                            <h2 class="text-3xl font-extrabold text-gray-900">Thực đơn hôm nay</h2>
                            <p class="text-gray-500 mt-1">Chọn món yêu thích của bạn</p>
                        </div>
                        <div class="relative w-full md:w-96 group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <i class="ph-bold ph-magnifying-glass text-gray-400 group-focus-within:text-orange-500 transition-colors"></i>
                            </div>
                            <input v-model="searchQuery" type="text" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border-2 border-transparent rounded-full text-sm focus:bg-white focus:border-orange-500 focus:outline-none transition-all" placeholder="Tìm kiếm món ăn (VD: Burger)...">
                        </div>
                    </div>

                    <div class="flex space-x-3 overflow-x-auto hide-scrollbar pb-4 mb-8">
                        <button v-on:click="selectedCategory = 'all'" class="cat-pill px-6 py-2.5 rounded-full text-sm font-bold border border-gray-200 bg-white text-gray-600 hover:border-orange-200 whitespace-nowrap" :class="{ 'active': selectedCategory === 'all' }">Tất cả</button>
                        <button v-for="cat in categories" :key="cat.categoryId" v-on:click="selectedCategory = cat.categoryId" class="cat-pill px-6 py-2.5 rounded-full text-sm font-bold border border-gray-200 bg-white text-gray-600 hover:border-orange-200 whitespace-nowrap" :class="{ 'active': selectedCategory === cat.categoryId }">{{ cat.name }}</button>
                    </div>

                    <div v-if="isLoading" class="flex justify-center py-20">
                        <i class="ph-bold ph-spinner animate-spin text-4xl text-orange-500"></i>
                    </div>

                    <div v-else class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                        <div v-for="item in filteredProducts" :key="item.productId" class="food-card bg-white rounded-2xl overflow-hidden flex flex-col h-full group">
                            <div class="food-image-wrapper relative h-56 bg-gray-100">
                                <img :src="item.image || 'https://via.placeholder.com/400x300?text=No+Image'" :alt="item.name" class="food-image w-full h-full object-cover">
                                <div class="absolute top-3 right-3 flex flex-col gap-2">
                                    <span v-if="item.oldPrice" class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-md shadow-sm">Sale</span>
                                </div>
                                <button v-on:click="addToCart(item)" class="absolute bottom-3 right-3 bg-white text-orange-600 w-10 h-10 rounded-full shadow-lg flex items-center justify-center hover:bg-orange-600 hover:text-white transition-colors lg:hidden"><i class="ph-bold ph-plus text-lg"></i></button>
                            </div>
                            <div class="p-5 flex-1 flex flex-col">
                                <div class="flex justify-between items-start mb-2">
                                    <span class="text-xs font-bold text-orange-600 bg-orange-50 px-2 py-1 rounded uppercase tracking-wide">{{ item.categoryName }}</span>
                                    <div class="flex items-center text-yellow-400 text-xs font-bold"><i class="ph-fill ph-star mr-1"></i> 4.5</div>
                                </div>
                                <h3 class="text-lg font-bold text-gray-900 mb-1 line-clamp-1" :title="item.name">{{ item.name }}</h3>
                                <p class="text-sm text-gray-500 line-clamp-2 mb-4 flex-1">{{ item.description }}</p>
                                <div class="flex items-end justify-between mt-auto pt-4 border-t border-gray-100">
                                    <div class="flex flex-col">
                                        <span v-if="item.oldPrice" class="text-xs text-gray-400 line-through decoration-red-400">{{ formatPrice(item.oldPrice) }}</span>
                                        <span class="text-xl font-extrabold text-gray-900">{{ formatPrice(item.price) }}</span>
                                    </div>
                                    <button v-on:click="addToCart(item)" class="hidden lg:flex bg-gray-900 hover:bg-orange-600 text-white w-10 h-10 rounded-xl items-center justify-center transition-colors"><i class="ph-bold ph-plus text-lg"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div v-if="!isLoading && filteredProducts.length === 0" class="text-center py-20 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
                        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4"><i class="ph-duotone ph-cookie text-3xl text-gray-400"></i></div>
                        <h3 class="text-lg font-bold text-gray-900">Không tìm thấy món ăn</h3>
                        <p class="text-gray-500 mt-1">Thử tìm từ khóa khác hoặc đổi danh mục xem sao nhé.</p>
                        <button v-on:click="selectedCategory = 'all'; searchQuery = ''" class="mt-6 text-orange-600 font-bold hover:underline">Xóa bộ lọc</button>
                    </div>
                </div>
            </div>
        </div>
    </script>
}

@section Scripts {
    <script>
        const serverProducts = @Html.Raw(Json.Serialize(Model));
        const serverCategories = @Html.Raw(Json.Serialize(ViewBag.Categories));

        if (window.vueApp) {
            window.vueApp.component('home-page', {
                template: '#home-page-template',
                setup() {
                    const { ref, reactive, computed, onMounted } = Vue;
                    const isLoading = ref(true);
                    const selectedCategory = ref('all');
                    const searchQuery = ref('');
                    const categories = ref(serverCategories);
                    const products = ref(serverProducts);

                    onMounted(() => {
                        setTimeout(() => { isLoading.value = false; }, 600);
                    });

                    const filteredProducts = computed(() => {
                        let result = products.value;
                        if (selectedCategory.value !== 'all') {
                            result = result.filter(p => p.categoryId === selectedCategory.value);
                        }
                        if (searchQuery.value.trim() !== '') {
                            const query = searchQuery.value.toLowerCase();
                            result = result.filter(p => 
                                p.name.toLowerCase().includes(query) || 
                                (p.description && p.description.toLowerCase().includes(query))
                            );
                        }
                        return result;
                    });

                    const formatPrice = (price) => {
                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
                    };

                    const scrollToMenu = () => {
                        document.getElementById('menu')?.scrollIntoView({ behavior: 'smooth' });
                    };

                    // === UPDATED: Login Check Logic ===
                    const addToCart = (item) => {
                        // Use the global helper defined in _Layout.cshtml
                        if (window.requireLogin && !window.requireLogin()) {
                            return; // Stop if not logged in
                        }
                        
                        alert(`Đã thêm món: ${item.name} vào giỏ hàng!`);
                    };

                    return {
                        isLoading,
                        selectedCategory,
                        searchQuery,
                        categories,
                        filteredProducts,
                        formatPrice,
                        scrollToMenu,
                        addToCart
                    };
                }
            });
        }
    </script>
}
