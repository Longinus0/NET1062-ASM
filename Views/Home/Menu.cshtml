@using ASM.Models
@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Thực đơn";
}

@section Styles {
    <link rel="stylesheet" href="~/Views/Home/Menu.cshtml.css" />
}

<menu-page></menu-page>

@section Templates {
    <script type="text/x-template" id="menu-page-template">
        <div class="menu-bg min-h-screen">
            <div class="bg-white shadow-sm border-b border-gray-100">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
                    <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                        Thực đơn <span class="text-orange-600">đa dạng</span>
                    </h1>
                    <p class="mt-2 text-gray-500 max-w-2xl">
                        Khám phá hương vị tuyệt vời từ Burger, Gà rán đến các món ăn kèm hấp dẫn.
                    </p>
                </div>
            </div>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <div class="flex flex-col lg:flex-row gap-8">
                    <div class="lg:w-1/4 flex-shrink-0">
                        <div class="relative mb-6">
                            <input v-model="searchQuery" type="text" 
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 focus:outline-none transition-shadow" 
                                placeholder="Tìm món ăn...">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ph-bold ph-magnifying-glass text-gray-400"></i>
                            </div>
                        </div>
                        <div class="hidden lg:block bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden sticky top-24">
                            <div class="p-4 bg-gray-50 border-b border-gray-100 font-bold text-gray-700">Danh mục</div>
                            <nav class="flex flex-col">
                                <button v-on:click="selectedCategory = 'all'"
                                    class="category-nav-item text-left px-5 py-3 text-sm font-medium text-gray-600 flex justify-between items-center"
                                    :class="{ 'active': selectedCategory === 'all' }">
                                    <span>Tất cả</span>
                                    <span class="bg-gray-100 text-gray-500 py-0.5 px-2 rounded-full text-xs">{{ products.length }}</span>
                                </button>
                                <button v-for="cat in categories" :key="cat.categoryId"
                                    v-on:click="selectedCategory = cat.categoryId"
                                    class="category-nav-item text-left px-5 py-3 text-sm font-medium text-gray-600 flex justify-between items-center"
                                    :class="{ 'active': selectedCategory === cat.categoryId }">
                                    <span>{{ cat.name }}</span>
                                    <span class="bg-gray-100 text-gray-500 py-0.5 px-2 rounded-full text-xs">{{ getCount(cat.categoryId) }}</span>
                                </button>
                            </nav>
                        </div>
                        <div class="lg:hidden flex space-x-2 overflow-x-auto mobile-cat-scroll pb-2">
                            <button v-on:click="selectedCategory = 'all'"
                                class="flex-shrink-0 px-4 py-2 rounded-full border text-sm font-medium whitespace-nowrap transition-colors"
                                :class="selectedCategory === 'all' ? 'bg-orange-600 text-white border-orange-600' : 'bg-white text-gray-600 border-gray-200'">
                                Tất cả
                            </button>
                            <button v-for="cat in categories" :key="cat.categoryId"
                                v-on:click="selectedCategory = cat.categoryId"
                                class="flex-shrink-0 px-4 py-2 rounded-full border text-sm font-medium whitespace-nowrap transition-colors"
                                :class="selectedCategory === cat.categoryId ? 'bg-orange-600 text-white border-orange-600' : 'bg-white text-gray-600 border-gray-200'">
                                {{ cat.name }}
                            </button>
                        </div>
                    </div>
                    <div class="lg:w-3/4 flex-1">
                        <div class="flex justify-between items-center mb-6">
                            <span class="text-sm text-gray-500">Hiển thị <strong>{{ filteredProducts.length }}</strong> món ăn</span>
                            <div class="flex items-center space-x-2">
                                <label class="text-sm text-gray-500 hidden sm:inline">Sắp xếp:</label>
                                <select v-model="sortBy" class="text-sm border-gray-200 rounded-lg focus:ring-orange-500 focus:border-orange-500 bg-white py-1.5 px-3">
                                    <option value="popular">Phổ biến nhất</option>
                                    <option value="price_asc">Giá: Thấp đến Cao</option>
                                    <option value="price_desc">Giá: Cao đến Thấp</option>
                                </select>
                            </div>
                        </div>
                        <div v-if="isLoading" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div v-for="n in 6" :key="n" class="bg-white rounded-xl h-80 animate-pulse border border-gray-200"></div>
                        </div>
                        <div v-else class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div v-for="item in sortedProducts" :key="item.productId" class="menu-item-card bg-white rounded-2xl overflow-hidden flex flex-col relative group">
                                <div class="menu-image-container relative h-48 bg-gray-100">
                                    <img :src="item.image || 'https://via.placeholder.com/400x300?text=No+Image'" :alt="item.name" class="menu-image w-full h-full object-cover">
                                    <button v-on:click="addToCart(item)" class="add-btn absolute bottom-3 right-3 bg-white text-orange-600 w-10 h-10 rounded-full shadow-lg flex items-center justify-center hover:bg-orange-600 hover:text-white lg:hidden">
                                        <i class="ph-bold ph-plus text-lg"></i>
                                    </button>
                                </div>
                                <div class="p-4 flex-1 flex flex-col">
                                    <div class="flex justify-between items-start mb-1">
                                        <span class="text-[10px] font-bold uppercase tracking-wider text-gray-400 border border-gray-200 px-1.5 py-0.5 rounded">{{ item.categoryName }}</span>
                                        <div class="flex items-center text-yellow-400 text-xs font-bold">
                                            <i class="ph-fill ph-star mr-1"></i> {{ item.rating }}
                                        </div>
                                    </div>
                                    <h3 class="font-bold text-gray-900 text-lg mb-1 truncate" :title="item.name">{{ item.name }}</h3>
                                    <p class="text-gray-500 text-sm line-clamp-2 mb-4 flex-1">{{ item.description }}</p>
                                    <div class="flex items-center justify-between pt-3 border-t border-gray-50">
                                        <span class="text-lg font-extrabold text-orange-600">{{ formatPrice(item.price) }}</span>
                                        <button v-on:click="addToCart(item)" class="add-btn hidden lg:flex bg-orange-50 text-orange-700 hover:bg-orange-600 hover:text-white px-3 py-1.5 rounded-lg text-sm font-bold transition-colors items-center">
                                            Thêm <i class="ph-bold ph-plus ml-1"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div v-if="!isLoading && filteredProducts.length === 0" class="text-center py-20 bg-white rounded-xl border border-dashed border-gray-200">
                            <i class="ph-duotone ph-cookie text-4xl text-gray-300 mb-2"></i>
                            <p class="text-gray-500">Không tìm thấy món ăn nào phù hợp.</p>
                            <button v-on:click="resetFilters" class="mt-4 text-orange-600 font-bold hover:underline">Xóa bộ lọc</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>
}

@section Scripts {
    <script>
        const serverProducts = @Html.Raw(Json.Serialize(Model));
        const serverCategories = @Html.Raw(Json.Serialize(ViewBag.Categories));

        if (window.vueApp) {
            window.vueApp.component('menu-page', {
                template: '#menu-page-template',
                setup() {
                    const { ref, reactive, computed, onMounted } = Vue;
                    const isLoading = ref(true);
                    const selectedCategory = ref('all');
                    const searchQuery = ref('');
                    const sortBy = ref('popular');
                    const categories = ref(serverCategories);
                    const products = ref(serverProducts);

                    onMounted(() => {
                        setTimeout(() => isLoading.value = false, 600);
                    });

                    const filteredProducts = computed(() => {
                        let result = products.value;
                        if (selectedCategory.value !== 'all') {
                            result = result.filter(p => p.categoryId === selectedCategory.value);
                        }
                        if (searchQuery.value.trim() !== '') {
                            const query = searchQuery.value.toLowerCase();
                            result = result.filter(p => 
                                p.name.toLowerCase().includes(query) || 
                                (p.description && p.description.toLowerCase().includes(query))
                            );
                        }
                        return result;
                    });

                    const sortedProducts = computed(() => {
                        let result = [...filteredProducts.value];
                        if (sortBy.value === 'price_asc') {
                            result.sort((a, b) => a.price - b.price);
                        } else if (sortBy.value === 'price_desc') {
                            result.sort((a, b) => b.price - a.price);
                        } 
                        return result;
                    });

                    const formatPrice = (price) => {
                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
                    };

                    const getCount = (catId) => {
                        if (catId === 'all') return products.value.length;
                        return products.value.filter(p => p.categoryId === catId).length;
                    };

                    // === UPDATED: Login Check Logic ===
                    const addToCart = (item) => {
                        // Use the global helper defined in _Layout.cshtml
                        if (window.requireLogin && !window.requireLogin()) {
                            return; // Stop if not logged in
                        }
                        
                        alert(`Đã thêm món: ${item.name} vào giỏ hàng!`);
                    };

                    const resetFilters = () => {
                        selectedCategory.value = 'all';
                        searchQuery.value = '';
                    };

                    return {
                        isLoading,
                        categories,
                        selectedCategory,
                        searchQuery,
                        sortBy,
                        products,
                        filteredProducts,
                        sortedProducts,
                        formatPrice,
                        getCount,
                        addToCart,
                        resetFilters
                    };
                }
            });
        }
    </script>
}
