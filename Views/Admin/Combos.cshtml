@{
    ViewData["Title"] = "Quản lý Combo";
}

@section Styles {
    <link rel="stylesheet" href="~/Views/Admin/Dashboard.cshtml.css" />
}

<admin-combos></admin-combos>

@section Templates {
    <script type="text/x-template" id="admin-combos-template">
        <div class="admin-bg flex">
            <div class="w-64 bg-white shadow-md min-h-screen hidden lg:block fixed left-0 top-16 bottom-0 overflow-y-auto z-10">
                <div class="p-6">
                    <h2 class="text-xs uppercase text-gray-400 font-bold tracking-wider mb-4">Quản lý</h2>
                    <nav class="space-y-1">
                        <a href="/Admin/Dashboard" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-squares-four text-xl mr-3"></i> Dashboard
                        </a>
                        <a href="/Admin/Orders" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-shopping-cart text-xl mr-3"></i> Đơn hàng
                        </a>
                        <a href="/Admin/Food" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-hamburger text-xl mr-3"></i> Món ăn
                        </a>
                        <a href="/Admin/Combos" class="sidebar-link active flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-package text-xl mr-3"></i> Combo
                        </a>
                        <a href="/Admin/Users" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-users text-xl mr-3"></i> Người dùng
                        </a>
                    </nav>
                </div>
            </div>

            <div class="flex-1 lg:ml-64 p-8">
                <div class="mb-8 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-900">Danh sách Combo</h1>
                    <button class="bg-orange-600 text-white px-4 py-2 rounded-lg shadow hover:bg-orange-700 transition flex items-center">
                        <i class="ph-bold ph-plus mr-2"></i> Thêm Combo
                    </button>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <div v-for="combo in combos" :key="combo.comboId" class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden flex flex-col">
                        <div class="h-48 bg-gray-100 relative">
                            <img :src="combo.image" class="w-full h-full object-cover" alt="">
                            <span v-if="!combo.isAvailable" class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">Tạm ngưng</span>
                        </div>
                        <div class="p-5 flex-1 flex flex-col">
                            <h3 class="font-bold text-lg text-gray-900 mb-1">{{ combo.name }}</h3>
                            <p class="text-sm text-gray-500 mb-4 flex-1">{{ combo.description }}</p>
                                <div class="flex items-center justify-between border-t border-gray-100 pt-4">
                                    <span class="font-bold text-xl text-orange-600">{{ formatPrice(combo.price) }}</span>
                                    <div class="flex space-x-2">
                                        <button class="text-blue-600 hover:bg-blue-50 p-2 rounded"><i class="ph-bold ph-pencil-simple"></i></button>
                                        <button v-on:click="deleteCombo(combo.comboId)" class="text-red-600 hover:bg-red-50 p-2 rounded"><i class="ph-bold ph-trash"></i></button>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>
}

@section Scripts {
    <script>
        const serverCombos = @Html.Raw(Json.Serialize(Model));

        if (window.vueApp) {
            window.vueApp.component('admin-combos', {
                template: '#admin-combos-template',
                setup() {
                    const { ref } = Vue;
                    const combos = ref(serverCombos);

                    const formatPrice = (price) => {
                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
                    };

                    const deleteCombo = async (id) => {
                        if (!confirm('Bạn có chắc chắn muốn xóa combo này?')) return;
                        try {
                            const res = await fetch(`/Admin/DeleteCombo/${id}`, { method: 'POST' });
                            const data = await res.json();
                            if (data.success) {
                                combos.value = combos.value.filter(c => c.comboId !== id);
                                if (window.showNotification) window.showNotification('Đã xóa combo', 'success');
                            } else {
                                if (window.showNotification) window.showNotification(data.message || 'Lỗi', 'error');
                            }
                        } catch (e) {
                            console.error(e);
                        }
                    };

                    return { combos, formatPrice, deleteCombo };
                }
            });
        }
    </script>
}
