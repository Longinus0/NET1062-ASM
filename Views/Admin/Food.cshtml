@{
    ViewData["Title"] = "Quản lý Món ăn";
}

@section Styles {
    <link rel="stylesheet" href="~/Views/Admin/Dashboard.cshtml.css" />
}

<admin-food></admin-food>

@section Templates {
    <script type="text/x-template" id="admin-food-template">
        <div class="admin-bg flex">
            <div class="w-64 bg-white shadow-md min-h-screen hidden lg:block fixed left-0 top-16 bottom-0 overflow-y-auto z-10">
                <div class="p-6">
                    <h2 class="text-xs uppercase text-gray-400 font-bold tracking-wider mb-4">Quản lý</h2>
                    <nav class="space-y-1">
                        <a href="/Admin/Dashboard" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-squares-four text-xl mr-3"></i> Dashboard
                        </a>
                        <a href="/Admin/Orders" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-shopping-cart text-xl mr-3"></i> Đơn hàng
                        </a>
                        <a href="/Admin/Food" class="sidebar-link active flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-hamburger text-xl mr-3"></i> Món ăn
                        </a>
                        <a href="/Admin/Combos" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-package text-xl mr-3"></i> Combo
                        </a>
                        <a href="/Admin/Users" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-users text-xl mr-3"></i> Người dùng
                        </a>
                    </nav>
                </div>
            </div>

            <div class="flex-1 lg:ml-64 p-8">
                <div class="mb-8 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-900">Danh sách món ăn</h1>
                    <button class="bg-orange-600 text-white px-4 py-2 rounded-lg shadow hover:bg-orange-700 transition flex items-center">
                        <i class="ph-bold ph-plus mr-2"></i> Thêm món mới
                    </button>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-gray-50 text-gray-500 font-medium">
                            <tr>
                                <th class="px-6 py-3 w-16">Hình</th>
                                <th class="px-6 py-3">Tên món</th>
                                <th class="px-6 py-3">Danh mục</th>
                                <th class="px-6 py-3">Giá</th>
                                <th class="px-6 py-3 text-center">Trạng thái</th>
                                <th class="px-6 py-3 text-right">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <tr v-for="item in products" :key="item.productId" class="table-row-hover">
                                <td class="px-6 py-4">
                                    <img :src="item.image" class="w-10 h-10 rounded-lg object-cover bg-gray-100" alt="">
                                </td>
                                <td class="px-6 py-4 font-medium text-gray-900">{{ item.name }}</td>
                                <td class="px-6 py-4">{{ item.category ? item.category.name : 'Unknown' }}</td>
                                <td class="px-6 py-4 font-bold text-orange-600">{{ formatPrice(item.price) }}</td>
                                <td class="px-6 py-4 text-center">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                          :class="item.isAvailable ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'">
                                        {{ item.isAvailable ? 'Đang bán' : 'Hết hàng' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <button class="text-blue-600 hover:text-blue-800 mr-3"><i class="ph-bold ph-pencil-simple text-lg"></i></button>
                                    <button class="text-red-500 hover:text-red-700"><i class="ph-bold ph-trash text-lg"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </script>
}

@section Scripts {
    <script>
        const serverProducts = @Html.Raw(Json.Serialize(Model));

        if (window.vueApp) {
            window.vueApp.component('admin-food', {
                template: '#admin-food-template',
                setup() {
                    const { ref } = Vue;
                    const products = ref(serverProducts);

                    const formatPrice = (price) => {
                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
                    };

                    return { products, formatPrice };
                }
            });
        }
    </script>
}
