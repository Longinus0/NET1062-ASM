@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

@section Styles {
    <link rel="stylesheet" href="~/Views/Admin/Dashboard.cshtml.css" />
}

<admin-orders></admin-orders>

@section Templates {
    <script type="text/x-template" id="admin-orders-template">
        <div class="admin-bg flex">
            <div class="w-64 bg-white shadow-md min-h-screen hidden lg:block fixed left-0 top-16 bottom-0 overflow-y-auto z-10">
                <div class="p-6">
                    <h2 class="text-xs uppercase text-gray-400 font-bold tracking-wider mb-4">Quản lý</h2>
                    <nav class="space-y-1">
                        <a href="/Admin/Dashboard" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-squares-four text-xl mr-3"></i> Dashboard
                        </a>
                        <a href="/Admin/Orders" class="sidebar-link active flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-shopping-cart text-xl mr-3"></i> Đơn hàng
                        </a>
                        <a href="/Admin/Food" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-hamburger text-xl mr-3"></i> Món ăn
                        </a>
                        <a href="/Admin/Combos" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-package text-xl mr-3"></i> Combo
                        </a>
                        <a href="/Admin/Users" class="sidebar-link flex items-center px-4 py-3 text-gray-600 rounded-lg font-medium">
                            <i class="ph-bold ph-users text-xl mr-3"></i> Người dùng
                        </a>
                    </nav>
                </div>
            </div>

            <div class="flex-1 lg:ml-64 p-8">
                <div class="mb-8 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-900">Danh sách Đơn hàng</h1>
                    <div class="flex space-x-2">
                        <button class="bg-white border border-gray-300 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50">Bộ lọc</button>
                        <button class="bg-white border border-gray-300 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50">Xuất Excel</button>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-gray-50 text-gray-500 font-medium">
                            <tr>
                                <th class="px-6 py-3">Mã đơn</th>
                                <th class="px-6 py-3">Khách hàng</th>
                                <th class="px-6 py-3">Ngày đặt</th>
                                <th class="px-6 py-3">Địa chỉ</th>
                                <th class="px-6 py-3">Tổng tiền</th>
                                <th class="px-6 py-3">Trạng thái</th>
                                <th class="px-6 py-3 text-right">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <tr v-for="order in orders" :key="order.orderId" class="table-row-hover">
                                <td class="px-6 py-4 font-bold text-gray-700">#{{ order.orderId }}</td>
                                <td class="px-6 py-4">
                                    <div class="font-medium text-gray-900">
                                        {{ order.user ? (order.user.lastName + ' ' + order.user.firstName) : order.guestName }}
                                    </div>
                                    <div class="text-xs text-gray-500">{{ order.user ? order.user.phone : order.guestPhone }}</div>
                                </td>
                                <td class="px-6 py-4 text-gray-500">{{ formatDate(order.createdAt) }}</td>
                                <td class="px-6 py-4 max-w-xs truncate" :title="order.fullAddress">{{ order.fullAddress }}</td>
                                <td class="px-6 py-4 font-bold text-gray-900">{{ formatPrice(order.totalAmount) }}</td>
                                <td class="px-6 py-4">
                                    <select class="text-xs font-bold uppercase rounded-full px-2 py-1 border-0 focus:ring-2 focus:ring-offset-1 cursor-pointer"
                                            :class="getStatusClass(order.status)"
                                            v-model="order.status">
                                        <option value="pending">Chờ xử lý</option>
                                        <option value="confirmed">Đã xác nhận</option>
                                        <option value="delivering">Đang giao</option>
                                        <option value="delivered">Hoàn tất</option>
                                        <option value="cancelled">Đã hủy</option>
                                    </select>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <button class="text-blue-600 hover:text-blue-800 font-medium">Chi tiết</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </script>
}

@section Scripts {
    <script>
        const serverOrders = @Html.Raw(Json.Serialize(Model));

        if (window.vueApp) {
            window.vueApp.component('admin-orders', {
                template: '#admin-orders-template',
                setup() {
                    const { ref } = Vue;
                    const orders = ref(serverOrders);

                    const formatPrice = (price) => {
                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
                    };

                    const formatDate = (dateString) => {
                        if (!dateString) return '';
                        return new Date(dateString).toLocaleString('vi-VN');
                    };

                    const getStatusClass = (status) => {
                        switch(status) {
                            case 'pending': return 'bg-yellow-100 text-yellow-800';
                            case 'confirmed': return 'bg-blue-100 text-blue-800';
                            case 'delivering': return 'bg-indigo-100 text-indigo-800';
                            case 'delivered': return 'bg-green-100 text-green-800';
                            case 'cancelled': return 'bg-red-100 text-red-800';
                            default: return 'bg-gray-100 text-gray-800';
                        }
                    };

                    return { orders, formatPrice, formatDate, getStatusClass };
                }
            });
        }
    </script>
}
